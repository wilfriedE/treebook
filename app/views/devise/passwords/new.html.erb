
<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, class: "well"}) do |f| %>
  <%= devise_error_messages! %>
  <fieldset><legend><h2>Forgot your password?</h2></legend>
  <%= f.input :email %>
  <div><%= f.submit "Send me reset password instructions" %></div>
  </fieldset>
<% end %>

<%= render "devise/shared/links" %>
